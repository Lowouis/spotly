# Environnement
NODE_ENV=production

# Base de données (MySQL/MariaDB)
DATABASE_PROVIDER="votre_type_de_db"
DATABASE_URL=mysql://intranetuser:CHANGE_ME_PASSWORD@127.0.0.1:3306/spotly

# Sécurité
AUTH_SECRET=CHANGE_ME_LONG_RANDOM_STRING
LDAP_ENCRYPTION_KEY=CHANGE_ME_STRONG_SECRET

# URLs de l'application
# Si l'app est servie sous un sous-chemin (ex: /spotly)
NEXT_PUBLIC_BASE_PATH=/spotly
NEXT_PUBLIC_API_ENDPOINT=http://intranet:3000/spotly
NEXTAUTH_URL=http://intranet:3000/spotly
NEXT_PUBLIC_API_DOMAIN=spotly.exemple.local

# Email
NEXT_PUBLIC_EMAIL_USER=spotly@example.fr

# (Optionnel) Valeurs de référence LDAP pour l'UI/tests
# La configuration effective LDAP est stockée en base (table LdapConfig) et chiffrée avec LDAP_ENCRYPTION_KEY
#NEXT_PUBLIC_LDAP_DOMAIN=ldap://servername.exemple.local
#NEXT_PUBLIC_LDAP_BASEDN=dc=exemple,dc=local
#NEXT_PUBLIC_LDAP_ADMIN_DN=CN=username,OU=ADMINISTRATION,OU=Utilisateurs_Caen_et_Herouville,OU=Utilisateurs,DC=exemple,DC=local
#NEXT_PUBLIC_LDAP_ADMIN_PASSWORD=CHANGE_ME

# (Optionnel) Référence Kerberos — la config effective est en base (table KerberosConfig)
#KERBEROS_REALM=EXAMPLE.LOCAL
#KERBEROS_SERVICE_NAME=HTTP
#KERBEROS_KEYTAB_PATH=/etc/krb5.keytab // Attention le path par défaut est /etc/krb5.keytab
#KERBEROS_PRINCIPAL=HTTP/exemple.example.local@EXAMPLE.LOCAL
